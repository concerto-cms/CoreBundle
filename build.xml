<?xml version="1.0" encoding="UTF-8"?>
<project name="ConcertoCmsCoreBundle" default="test">
    <target name="test">
        <phpcodesniffer
                standard="PSR2"
                format="full"
                ignorePatterns="Resources/public/*,vendor/*"
                file="."
                haltonerror="true"
                allowedFileExtensions="php"/>
        <exec command="npm install -g grunt-cli" passthru="true" />
        <exec command="npm install" passthru="true" />
        <exec command="composer install" passthru="true" />
        <exec command="grunt test" passthru="true" />
        <exec command="phpunit" passthru="true" />
    </target>
</project>