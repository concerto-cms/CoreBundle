<li>
    <a href="#{{ language.get('slug') }}/{{ page.id }}" class="list-group-item">
        <h4 class="list-group-item-heading">{{ page.get('title')|default('<em>Untitled</em>') }}</h4>
        <p class="list-group-item-text">{{ page.id }}</p>
    </a>
    {% if page.children|length > 0 %}
        <ul>
            {% for child in page.children %}
                {% include 'content.pageListItem.html.twig' with {language: language, page: child} %}
            {% endfor %}
        </ul>
    {% endif %}
</li>
