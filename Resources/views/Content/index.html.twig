{% extends 'ConcertoCmsCoreBundle:_Layouts:base.html.twig' %}
{% block title %}Browse content{% endblock %}

{% block content %}
    <div id="contentContainer">

    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/templates.core.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>
    <script src="{{ asset('bundles/concertocmscore/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('bundles/concertocmscore/ckeditor/adapters/jquery.js') }}"></script>
    <script>

        _.extend(CKEDITOR.config, {
            language: 'nl',
            filebrowserBrowseUrl: '{{ path('elfinder') }}'/*,

             toolbarGroups: [
             { name: 'source', items: [ 'Source' ] },
             { name: 'customtools', items: [ 'Maximize', 'ShowBlocks']},
             { name: 'formatting', items: [ 'RemoveFormat' ]},
             { name: 'paste', items: [ 'PasteText', 'PasteFromWord' ] },
             { name: 'cmsInsert', items: ['Image', 'Table', 'HorizontalRule', 'Blockquote', '-', 'Templates'] },
             { name: 'paragraph',   items: [ 'NumberedList', 'BulletedList', '-', 'Outdent', 'Indent'] },
             '/',
             { name: 'customstyles', items: [ 'Styles', 'Format' ] },
             { name: 'basics', items: [ 'Bold', 'Italic', 'Underline'] },
             { name: 'customcolors', items: [ 'TextColor', 'BGColor' ] },
             { name: 'customanchors', items: ['Link', 'Unlink', 'Anchor']},
             { name: 'justify', items: [ 'JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock'] }
             ]*/
        });

        window.controller = new Controller.Content({
            pages: {{ pages|json_encode|raw }},
            pageTypes: {{ getPagetypes()|json_encode|raw }}
        });
    </script>
{% endblock %}